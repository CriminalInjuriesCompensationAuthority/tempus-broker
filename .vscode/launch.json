{
    "version": "1.0.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run function handler as test",
            //"env": { "NODE_ENV": "test" },
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": ["function/index.test.js | npx pino-pretty", "--config", "jest.config.js"],
            "console": "integratedTerminal",
            "disableOptimisticBPs": true,
            "windows": {
                "program": "${workspaceFolder}/node_modules/jest/bin/jest"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run all tests with debugger",
            //"env": { "NODE_ENV": "test" },
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": ["| npx pino-pretty", "--config", "jest.config.js"],
            "console": "integratedTerminal",
            "disableOptimisticBPs": true,
            "windows": {
                "program": "${workspaceFolder}/node_modules/jest/bin/jest"
            }
        }
    ]
}
